{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Transform": "AWS::Serverless-2016-10-31",
  "Description": "Example template for creating a UDP service using an AWS Lambda Function connected to a Proxylity UDP Listener. You must be subscribed to Proxylity UDP Gateway to successfully deploy this template.",
  "Parameters": {
    "ClientCidrToAllow": {
      "Description": "The CIDR describine which IP addresses should be allowed to use the listener. Default is open/everyone.",
      "Type": "String",
      "Default": "0.0.0.0/0"
    }
  },
  "Mappings": {
    "ProxylityConfig": {
      "Fn::Transform": {
        "Name": "AWS::Include",
        "Parameters": {
          "Location": {
            "Fn::Sub": "s3://proxylity-config-${AWS::Region}/${AWS::AccountId}/customer-config.json"
          }
        }
      }
    }
  },
  "Resources": {
    "PacketCounterStateMachine": {
      "Type": "AWS::Serverless::StateMachine",
      "Properties": {
        "Type": "EXPRESS",
        "Policies": [
          {
            "Version": "2012-10-17",
            "Statement": [
              {
                "Effect": "Allow",
                "Action": [
                  "logs:CreateLogDelivery",
                  "logs:CreateLogStream",
                  "logs:GetLogDelivery",
                  "logs:UpdateLogDelivery",
                  "logs:DeleteLogDelivery",
                  "logs:ListLogDeliveries",
                  "logs:PutLogEvents",
                  "logs:PutResourcePolicy",
                  "logs:DescribeResourcePolicies",
                  "logs:DescribeLogGroups"
                ],
                "Resource": [
                  "/aws/vendedlogs/states/PacketCounterStateMachine-*"
                ]
              }
            ]
          }
        ],
        "Definition": {
          "StartAt": "Count Packets by Source IP",
          "States": {
            "Count Packets by Source IP": {
              "Type": "Pass",
              "Output": "{% (\n    $counts := $states.input.Messages.Remote{`IpAddress`: $count($)};\n    $replies := $each($counts, function($v, $i) { ({ \n        \"Tag\": $filter($states.input.Messages, function($m) { ($m.Remote.IpAddress = $i ) })[0].Tag,\n        \"Data\": $base64encode($string($v)) \n    }) });\n    {\n        \"Replies\": [$replies]\n    }\n) %}",
              "End": true
            }
          },
          "QueryLanguage": "JSONata",
          "TimeoutSeconds": 2
        }
      }
    },
    "DestinationRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "AWS": {
                  "Fn::FindInMap": [
                    "ProxylityConfig",
                    {
                      "Ref": "AWS::Region"
                    },
                    "ServiceRole"
                  ]
                }
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "AllowStateMachineExecution",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Sid": "Sfn",
                  "Effect": "Allow",
                  "Action": [
                    "states:DescribeStateMachine",
                    "states:StartSyncExecution"
                  ],
                  "Resource": [
                    {
                      "Fn::GetAtt": [
                        "PacketCounterStateMachine",
                        "Arn"
                      ]
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    },
    "UdpListener": {
      "Type": "Custom::ProxylityUdpGatewayListener",
      "Properties": {
        "ServiceToken": {
          "Fn::FindInMap": [
            "ProxylityConfig",
            {
              "Ref": "AWS::Region"
            },
            "ServiceToken"
          ]
        },
        "ApiKey": {
          "Fn::FindInMap": [
            "ProxylityConfig",
            "Account",
            "ApiKey"
          ]
        },
        "Protocols": [
          "udp"
        ],
        "ClientRestrictions": {
          "Networks": [
            {
              "Ref": "ClientCidrToAllow"
            }
          ]
        },
        "Destinations": [
          {
            "Description": "Delivers to the packet counter state machine, which returns a single response to each distinct client IP address.",
            "Role": {
              "Arn": {
                "Fn::GetAtt": [
                  "DestinationRole",
                  "Arn"
                ]
              }
            },
            "Batching": {
              "Count": 1000,
              "TimeoutInSeconds": 1
            },
            "DestinationArn": {
              "Fn::GetAtt": [
                "PacketCounterStateMachine",
                "Arn"
              ]
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "Domain": {
      "Value": {
        "Fn::Sub": "${UdpListener.Domain}.proxylity.com"
      }
    },
    "Port": {
      "Value": {
        "Fn::GetAtt": [
          "UdpListener",
          "Port"
        ]
      }
    },
    "Endpoint": {
      "Value": {
        "Fn::Sub": "${UdpListener.Domain}.proxylity.com:${UdpListener.Port}"
      }
    }
  }
}