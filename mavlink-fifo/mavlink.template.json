{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Transform": "AWS::Serverless-2016-10-31",
  "Description": "Example template for . You must be subscribed to Proxylity UDP Gateway to successfully deploy this template.",
  "Parameters": {
    "ClientCidrToAllow": {
      "Description": "The CIDR describine which IP addresses should be allowed to use the listener. Default is open/everyone.",
      "Type": "String",
      "Default": "0.0.0.0/0"
    }
  },
  "Mappings": {
    "ProxylityConfig": {
      "Fn::Transform": {
        "Name": "AWS::Include",
        "Parameters": {
          "Location": {
            "Fn::Sub": "s3://proxylity-config-${AWS::Region}/${AWS::AccountId}/customer-config.json"
          }
        }
      }
    }
  },
  "Resources": {
    "FifoQueue": {
      "Type": "AWS::SQS::Queue",
      "Properties": {
        "FifoQueue": true
      }
    },
    "FifoQueueLogs": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": "/proxylity/udp-listeners/sqs-fifo-queue",
        "RetentionInDays": 14
      }
    },
    "DestinationRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "AWS": {
                  "Fn::FindInMap": [
                    "ProxylityConfig",
                    {
                      "Ref": "AWS::Region"
                    },
                    "ServiceRole"
                  ]
                }
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "AllowSqs",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Sid": "Sqs",
                  "Effect": "Allow",
                  "Action": [
                    "sqs:GetQueueUrl",
                    "sqs:SendMessage"
                  ],
                  "Resource": [
                    {
                      "Fn::GetAtt": [
                        "FifoQueue",
                        "Arn"
                      ]
                    }
                  ]
                },
                {
                  "Sid": "AllowCloudWatchPutMetricData",
                  "Effect": "Allow",
                  "Action": [
                    "cloudwatch:PutMetricData"
                  ],
                  "Resource": "*"
                },
                {
                  "Sid": "AllowLogsPutLogEvents",
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "${FifoQueueLogs.Arn}:*"
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    },
    "UdpListener": {
      "Type": "Custom::ProxylityUdpGatewayListener",
      "Properties": {
        "ServiceToken": {
          "Fn::FindInMap": [
            "ProxylityConfig",
            {
              "Ref": "AWS::Region"
            },
            "ServiceToken"
          ]
        },
        "ApiKey": {
          "Fn::FindInMap": [
            "ProxylityConfig",
            "Account",
            "ApiKey"
          ]
        },
        "Protocols": [
          "udp"
        ],
        "ClientRestrictions": {
          "Networks": [
            {
              "Ref": "ClientCidrToAllow"
            }
          ]
        },
        "Destinations": [
          {
            "Description": "Delivers to the FIFO queue with raw payload delivery (hex format for readability), messages attributes for metadata (source IP/port, domain, ingress port) and the MessageGroupId formed from the SYSID and COMPID in the packet as a hex string. MessageDeduplicationId is the full packet payload.",
            "Arguments": {
              "SendRaw": true,
              "UseMessageAttributes": true,
              "MessageGroupIdExpression": "[0] = 0xFE ? [3:5] : ([0] = 0xFD ? [5:7] : 0xFFFF)",
              "MessageGroupIdFormatter": "hex"
            },
            "Role": {
              "Arn": {
                "Fn::GetAtt": [
                  "DestinationRole",
                  "Arn"
                ]
              }
            },
            "Batching": {
              "Count": 10,
              "TimeoutInSeconds": 1.0
            },
            "Formatter": "hex",
            "MetricsEnabled": true,
            "LogGroupName": { 
              "Ref": "FifoQueueLogs" 
            },
            "DestinationArn": {
              "Fn::GetAtt": [
                "FifoQueue",
                "Arn"
              ]
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "Domain": {
      "Value": {
        "Fn::Sub": "${UdpListener.Domain}.proxylity.com"
      }
    },
    "Port": {
      "Value": {
        "Fn::GetAtt": [
          "UdpListener",
          "Port"
        ]
      }
    },
    "Endpoint": {
      "Value": {
        "Fn::Sub": "${UdpListener.Domain}.proxylity.com:${UdpListener.Port}"
      }
    },
    "FifoQueueUrl": {
      "Value": {
        "Ref": "FifoQueue"
      }
    }
  }
}